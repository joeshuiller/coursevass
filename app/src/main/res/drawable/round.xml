<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:shape="rectangle"   >

    <solid
        android:color="@color/vass"
        android:elevation="130dp"
        tools:targetApi="lollipop"
        android:outlineProvider="paddedBounds">
    </solid>

    <stroke
        android:width="2dp"
        android:color="@color/vass" >
    </stroke>
    <item android:name="android:shadowColor">@color/black</item>
    <item android:name="android:shadowDy">3</item>
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"    >
    </padding>

    <corners
        android:radius="11dp"   >
    </corners>

</shape>